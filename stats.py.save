def get_word_count(book_text):
    book_words = book_text.split()
    return len(book_words)

def get_char_dict(book_words):
    char_count = {}
    char_list = list(book_words.lower())
    for char in char_list:
        if char in char_count:
            char_count[char] += 1
        else:
            char_count[char] = 1 
    return char_count

def sort_on(items):
    return items["num"]

def sort_char_dict(char_count):
    final_list = []
    char_row = {}
    for i in char_row:
        for k, v in char_count.items():
            char_row[i] = k[v] 
            final_list.append(dict(name=k, num=v))
    return  final_list
